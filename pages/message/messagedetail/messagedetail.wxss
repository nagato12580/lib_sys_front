.theme-container{
  width: 100%;
  background-color: rgb(240, 240, 240);
  border-radius: 20rpx;

}
.theme-message{
  border-bottom:1px gray dashed;
  padding-bottom: 10rpx;
}
.theme-content{
  padding: 10rpx;
}
.theme-data{
  text-align: right
}

.reply{
  display: flex;/*使得该view里面的元素水平布局*/
  padding: 15rpx;
  /* border:1rpx solid #efefef; */
  margin: 15rpx;
  border-radius: 8rpx;
  /* box-shadow: 1rpx 1rpx 10rpx #ddd; */
}
.name{
  font-size: 30rpx;
  color: rgb(47, 161, 255);
}

.avatar image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin-right: 20rpx;
  border-radius:50%
}
.info{
    /*一下两项使得文字垂直布局*/
    display: flex;
    flex-direction: column;
    /*使其均匀分布再容器中*/
    justify-self: space-around;
    font-size: 30rpx;
}
.date-reply{
  display: flex;/*使得该view里面的元素水平布局*/
}
.date-reply text{
  margin-top: 15rpx;
  font-size: 12px;
  color: gray;

}
.comment-reply{
  font-size: 12px;
  color: gray;
  margin-top: 15rpx;
  margin-left: 50rpx;
}
.reply-containr{
  margin-top: 15rpx;
  font-size: 12px;
  color: gray;
}
.second-reply{
  display: flex;/*使得该view里面的元素水平布局*/
  padding: 8rpx;
  /* border:1rpx solid #efefef; */
  margin: 8rpx;
  border-radius: 8rpx;
  /* box-shadow: 1rpx 1rpx 10rpx #ddd; */
}
.second-avatar image{
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin-right: 20rpx;
    border-radius:100%
}
.content{
  flex-wrap: wrap;
  word-wrap: break-word;
  white-space: normal;
}
.second-content{
  color: black;
  font-size: 13px;
}
.textarea-container{
  width: 80%;

  display: flex;/*使得该view里面的元素水平布局*/
  justify-content: center;
  align-items: center;
  
}
.bottom-warning{
  width: 100%;
  height: 150rpx;
  font-size: 12px;
  color: gray;
  display: flex;/*使得该view里面的元素水平布局*/
  justify-content: center;
  padding-bottom: 50rpx;
}
.bottom-textarea{
  display: flex;/*使得该view里面的元素水平布局*/
  background-color:rgb(230, 229, 229);
  height: 80rpx;
  position: fixed;/*设置固定底部*/
  bottom: 0rpx;
  width: 100%;
}
.textarea-container textarea{
  background-color: white;
  border-radius: 30rpx;
  box-sizing: border-box;
  width: 100%; 
  height: 80%;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.button-container{
  width: 20%;
  display: flex;/*使得该view里面的元素水平布局*/
  justify-content: center;
  align-items: center;
}